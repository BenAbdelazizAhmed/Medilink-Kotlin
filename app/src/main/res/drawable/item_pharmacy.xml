<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/pharmacy_card_bg"
    android:padding="10dp">

    <!-- Image de la pharmacie -->
    <android.widget.ImageView
        android:id="@+id/pharmacy_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/pharmacy_image"
        android:scaleType="centerCrop" />

    <!-- DÃ©tails de la pharmacie -->
    <android.widget.RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/pharmacy_image"
        android:layout_alignParentEnd="true"
        android:paddingStart="10dp"
        android:layout_centerVertical="true">

        <!-- Nom de la pharmacie -->
        <android.widget.TextView
            android:id="@+id/pharmacy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pharmacy Name"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_alignParentTop="true" />

        <!-- Adresse de la pharmacie -->
        <android.widget.TextView
            android:id="@+id/pharmacy_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pharmacy Address"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_below="@id/pharmacy_name" />

        <!-- Statut de la pharmacie -->
        <android.widget.TextView
            android:id="@+id/pharmacy_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Open"
            android:textColor="#00796b"
            android:textSize="12sp"
            android:layout_below="@id/pharmacy_address" />
    </android.widget.RelativeLayout>

</android.widget.RelativeLayout>
