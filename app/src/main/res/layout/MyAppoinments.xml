<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
   >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="My Appointments"
        app:titleTextColor="#0B8FAC" />

    <androidx.cardview.widget.CardView
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:hint="Find Your Doctor, Phar..."
                android:paddingStart="12dp"
                android:drawableStart="@drawable/ic_search"
                android:background="@drawable/search_bar_background" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Map View"
                android:backgroundTint="#0099E5"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:id="@+id/filters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctors"
                android:backgroundTint="#6db0d0"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pharmacy"
                android:backgroundTint="#FFFFFF"
                android:textColor="#6db0d0"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:strokeColor="#6db0d0"
                android:strokeWidth="1dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicine"
                android:backgroundTint="#FFFFFF"
                android:textColor="#6db0d0"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:strokeColor="#6db0d0"
                android:strokeWidth="1dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analysis Lab"
                android:backgroundTint="#FFFFFF"
                android:textColor="#6db0d0"
                android:padding="8dp"
                android:strokeColor="#6db0d0"
                android:strokeWidth="1dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/appointmentList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/filters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation">

        <!-- Rendez-vous 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="8dp">

            <!-- Image du médecin -->
            <ImageView
                android:layout_width="62dp"
                android:layout_height="103dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/d"
                android:scaleType="centerCrop"
                android:src="@drawable/images" />

            <!-- Détails du rendez-vous -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Ahmed Abdelaziz"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"
                    android:textSize="18sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="71dp"
                    android:text="Cardiologist - 10:00 AM, 25 Nov"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Boutons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#FFCDD2"
                    android:textColor="#B71C1C"
                    android:padding="8dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reschedule"
                    android:backgroundTint="#BBDEFB"
                    android:textColor="#1E88E5"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="8dp">

            <!-- Image du médecin -->
            <ImageView
                android:layout_width="62dp"
                android:layout_height="109dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ahmede"
                android:scaleType="centerCrop"
                android:src="@drawable/ahmede" />

            <!-- Détails du rendez-vous -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Sami Boukhris"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"
                    android:textSize="18sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="71dp"
                    android:text="Dentiste - 10:00 AM, 25 Nov"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Boutons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#FFCDD2"
                    android:textColor="#B71C1C"
                    android:padding="8dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reschedule"
                    android:backgroundTint="#BBDEFB"
                    android:textColor="#1E88E5"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="8dp">

            <!-- Image du médecin -->
            <ImageView
                android:layout_width="68dp"
                android:layout_height="109dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rr"
                android:scaleType="centerCrop"
                android:src="@drawable/cgg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. sawsen abdelaziz"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"
                    android:textSize="18sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="71dp"
                    android:text="Cardiologist - 10:00 AM, 25 Nov"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Boutons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#FFCDD2"
                    android:textColor="#B71C1C"
                    android:padding="8dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reschedule"
                    android:backgroundTint="#BBDEFB"
                    android:textColor="#1E88E5"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:itemIconSize="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
